<div class="alert alert-danger"><%= message %></div>
<div id="profile-container" class="container">
  <section id="profile-header">
    <h1><%= user.gitHub.username %></h1>
    <div class="row">
      <div class="col s4">
        <div id="avatar-container">
          <img id="github-avatar" src="<%= user.avatarUrl %>" alt="<%= user.gitHub.username %>">
        </div>
      </div>
      <div class="col s8">
        <div class="" id="profile-info">
          <p>Name: <span><%= user.name %></span></p>
          <p>Location: <span><%= user.location %></span></p>
          <p>Repos: <span><%= repoCount %></span></p>
          <p>Public Repos: <span><%= user.publicRepos %></span></p>
          <p>Gists: <span><%= user.publicGists %></span></p>
          <a target="_blank" class="btn" href="<%= user.profileUrl %>">GitHub Profile</a>
        </div>
      </div>
    </div>

  </section>
  <div class="row">
    <div class="col s12">
      <ul class="tabs">
        <li class="tab col s3"><a class="active" href="#repos">Repos</a></li>
        <li class="tab col s3"><a href="#language-stats">Language Stats</a></li>
        <li class="tab col s3"><a href="#social-stats">Social Stats</a></li>
      </ul>
    </div>

    <section id="repos" class="col s12">
      <h3>Repo List</h3>
      <div class="collection">
        <% repos.forEach(function(repo, i){ %>
          <a class="collection-item" href="/repo/<%=repo.name%>">
            <span><%= repo.name %></span>
            <%= repo.description %>
          </a>
        <%})%>
      </div>
    </section>

    <section id="language-stats" class="col s12">
      <h3>Language Stats</h3>
      <%= user.languageBreakdowns[user.languageBreakdowns.length-1]%>
      <% for (var key in languageCounts) { %>
        <% if (languageCounts.hasOwnProperty(key)) { %>
          <p><%= key %> : <span class="lang-value"><%=languageCounts[key] %></span></p>
        <%}%>
      <%}%>
    </section>

    <section id="social-stats" class="col s12">
      <h3>Social Stats</h3>
    </section>
  </div>


</div>
<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<script src="/js/profile.js" charset="utf-8"></script>
